    }
  </style>
  <body>

  <form method="post" action="/add" enctype="application/x-www-form-urlencoded">
    <input name="link"   placeholder="Link Anh">
    <input name="description" placeholder="Noi Dung">
    <input name="date" placeholder="Ngay thang">
    <button type="submit">Them</button>
  </form>
  <% for(var i = 0;i < data.length; i++){ %>

    <%var url = data[i].link%>
      <div class="item" >
      <img src="<%=url%>" width="1000px" height="600px"/>
    <div>ID : <%= data[i]._id %></div>
    <div>Mo ta : <%= data[i].description %></div>
    <div>ngay : <%= data[i].date %></div>
    <a href="/delete/?id=<%= data[i]._id %>">Delete</a>
    <a href="/updateForm/?id=<%= data[i]._id %>">Update</a>

  <% } %>
      </div>
  </body>
</html>
